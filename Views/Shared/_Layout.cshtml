<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Hometech</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        .navbar .nav-item .dropdown-menu{ display: none; margin-top: 0}
        .navbar .nav-item:hover .dropdown-menu{ display: block; }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom shadow-sm mb-3">
        <div class="container">
            <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">Hometech</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    @if (User.IsInRole("Администратор"))
                    { 
                        <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Orders">Заказы</a>
                        </li>
                    }
                    @if (User.IsInRole("Курьер"))
                    {
                        <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="CourierOrders">Ваши заказы</a>
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" asp-area="" asp-controller="Home" asp-action="AllProducts">Все товары</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="WashMachine">Стиральные машины</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Fridge">Холодильники</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Microwave">Микроволновые печи</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Iron">Утюги</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="VacuumCleaner">Пылесосы</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Conditioner">Кондиционеры</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Tv">Телевизоры</a></li>
                        </ul>
                    </li>
                </ul> 
                @await Html.PartialAsync("_LoginPartial")
             </div> 
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer bg-primary text-white">
    <div class="container">
        &copy; 2022 - Hometech
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>