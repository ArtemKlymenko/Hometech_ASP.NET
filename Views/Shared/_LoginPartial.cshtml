@inject SignInManager<user_info> _signInManager
@inject UserManager<user_info> _userManager

@if (_signInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="btn btn-primary text-white" asp-area="" asp-controller="Manage" asp-action="EditPersonal">Здравствуйте, @_userManager.GetUserName(User)</a>
            </li>
            @if (User.IsInRole("Клиент"))
            {
                <li class="nav-item">
                    <a class="btn btn-primary text-white" asp-area="" asp-controller="Home" asp-action="Cart">Корзина</a>
                </li>
            }
            <li>
                <button type="submit" class="btn btn-primary text-white">Выйти</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a class="btn btn-primary text-white" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
        <li class="nav-item"><a class="btn btn-primary text-white" asp-area="" asp-controller="Account" asp-action="Login">Войти</a></li>
    </ul>
}