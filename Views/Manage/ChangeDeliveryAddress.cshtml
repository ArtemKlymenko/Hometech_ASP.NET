@using Hometech.Views.Manage
@model Hometech.Models.ManageViewModels.ChangeDeliveryAddress
@{
    ViewData["Title"] = "Изменить адрес доставки";
    ViewData.AddActivePage(ManageNavPages.ChangeDeliveryAddress);
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label>Город</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label>Улица</label>
                <input asp-for="Street" class="form-control" />
            </div>
            <div class="form-group">
                <label>Номер дома</label>
                <input asp-for="HomeNumber" class="form-control" />
                <span asp-validation-for="HomeNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Изменить адрес доставки</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}