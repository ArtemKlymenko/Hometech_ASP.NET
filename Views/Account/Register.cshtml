@model Hometech.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Создайте новый аккаунт</h4>
            <hr/>
            <div class="form-group">
                <label>Адрес электронной почты</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Имя</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Фамилия</label>
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group">
                <label>Номер телефона</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Логин</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Подтвердите пароль</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <h3>Укажите адрес доставки:</h3>
            <div class="form-group">
                <label>Город</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label>Улица</label>
                <input asp-for="Street" class="form-control" />
            </div>
            <div class="form-group">
                <label>Номер дома</label>
                <input asp-for="HomeNumber" class="form-control" />
                <span asp-validation-for="HomeNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}